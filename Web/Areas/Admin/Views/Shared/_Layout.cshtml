@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- For IE -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- For Resposive Device -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- For Window Tab Color -->
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content="#061948">
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#061948">
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="#061948">
    <title>NEWTESTLAB</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="56x56" href="~/images/home/webSetting/icon.png">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <link rel="stylesheet" href="~/fonts/font-awesome/css/all.min.css">
    <!-- Web style sheets -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Main style sheet -->
    <link rel="stylesheet" href="~/css/adminlte.css">
    <!-- Admin Panel Style Sheet -->
    <link rel="stylesheet" type="text/css" href="~/css/admin-panel.css">
    <!-- Admin Panel Style Sheet -->
    <link rel="stylesheet" href="~/css/admin-panel.css">
</head>
<body>
    <div class="hold-transition sidebar-mini">
        <!-- Site wrapper -->
        <div class="wrapper">
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>

                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-area="Main" asp-action="Index" asp-controller="Home" class="nav-link">Home</a>
                    </li>

                </ul>
                <ul class="navbar-nav ml-auto">

                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item d-none d-sm-inline-block">
                            <form method="post" asp-area="admin" asp-action="Logout" asp-controller="Account">
                                <button type="submit" class="nav-link btn btn-link py-0">
                                    Logout @User.Identity.Name
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item d-none d-sm-inline-block">
                            <a asp-area="admin" asp-action="Login" asp-controller="account" class="nav-link">Login</a>
                        </li>
                    }


                </ul>
            </nav>
            <!-- /.navbar -->
            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="#" class="brand-link">
                    <span class="brand-text font-weight-light">NEWTESTLAB</span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar user (optional) -->
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/images/admin-panel/user-01.jpg" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <div class="info">
                            <a href="#" class="d-block">Qusai Aburayyn</a>
                        </div>
                    </div>

                    <!-- SidebarSearch Form -->
                    <div class="form-inline">
                        <div class="input-group" data-widget="sidebar-search">
                            <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                            <div class="input-group-append">
                                <button class="btn btn-sidebar">
                                    <i class="fas fa-search fa-fw"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a asp-area="Admin" asp-action="Index" asp-controller="Contactus" class="nav-link">
                                    <i class="nav-icon far fa-envelope"></i>
                                    <p>Mail Box</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="Admin" asp-action="Index" asp-controller="WebSettings" class="nav-link">
                                    <i class="nav-icon  fas fa-sliders-h"></i>
                                    <p>Website Settings</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="Admin" asp-action="Index" asp-controller="SocialMediaAddresses" class="nav-link">
                                    <i class="nav-icon fas fa-share-alt"></i>
                                    <p>Social Media</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="Admin" asp-action="Index" asp-controller="Slides" class="nav-link">
                                    <i class="nav-icon fab fa-slideshare"></i>
                                    <p>Slides</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>About us<i class="right fas fa-angle-left"></i></p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-area="Admin" asp-action="Index" asp-controller="Aboutus" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Main Content</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-area="Admin" asp-action="Index" asp-controller="Certifications" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Certfications</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-area="Admin" asp-action="Index" asp-controller="QualityPolicies" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Quality Policy</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a asp-area="Admin" asp-action="Index" asp-controller="Services" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>Services</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="Admin" asp-action="Index" asp-controller="SpecialServices" class="nav-link">
                                    <i class="nav-icon far fa-star"></i>
                                    <p>Special Services</p>
                                </a>
                            </li>

                            @if (signInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a asp-area="Admin" asp-action="Register" asp-controller="Account" class="nav-link">
                                        <i class="nav-icon fas fa-user-plus"></i>
                                        <p>Register New User</p>
                                    </a>
                                </li>
                            }

                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <div>
                @RenderBody()
            </div>

            <footer class="main-footer">
                <div class="float-right d-none d-sm-block">
                    <b>Technical Support :</b> 0569-441-004
                </div>
                &copy; Copyrights 2021. All Rights Reserved. <strong>NEWTESTLAB.</strong>
            </footer>

            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->
        </div>
        <!-- ./wrapper -->
    </div>
    <!-- jQuery -->
    <script src="~/vendor/jquery.2.2.3.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/vendor/bootstrap/css/bootstrap.min.css"></script>
    <!-- Admin-Panel-->
    <script src="~/js/adminlte.min.js"></script>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: true);
    }
</body>
</html>