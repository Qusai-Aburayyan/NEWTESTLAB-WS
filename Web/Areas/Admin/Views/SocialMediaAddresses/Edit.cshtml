                                            <label asp-for="LinkedinAdress" class="control-label"></label>
                                            <input asp-for="LinkedinAdress" class="form-control" />
                                            <span asp-validation-for="LinkedinAdress" class="text-danger"></span>
                                        </div>
                                        <input type="hidden" asp-for="Id" />
