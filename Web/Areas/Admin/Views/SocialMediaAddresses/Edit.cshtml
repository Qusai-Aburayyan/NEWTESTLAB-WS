                    <div class="card">
                        <div class="card-header">
                            <h1 class="card-title">Services Control Panel</h1>
                        </div><!-- /.card-header -->
                        <div class="card-body">


                            <h1>Edit</h1>

                            <h4>SocialMediaAddresses</h4>
                            <hr />
